{% extends '::base.html.twig' %}
    {% block stylesheets %}
        <style>

        </style>
    {% endblock %}

{% block javascripts %}{% endblock %}





{% block body -%}
    <script src="http://code.highcharts.com/maps/highmaps.js"></script>
    <script src="http://code.highcharts.com/maps/modules/exporting.js"></script>
    <script src="http://code.highcharts.com/mapdata/countries/ua/ua-all.js"></script>

    <div id="container" style="min-width: 300px; height: 800px; margin: 0 auto"></div>

    <script>
        $(function () {
            $('#container').highcharts({
                chart: {
                    type: 'column'
                },
                title: {
                    text: 'Распределение кафедр по университетам'
                },
                subtitle: {
//                    text: 'Source: <a href="http://en.wikipedia.org/wiki/List_of_cities_proper_by_population">Wikipedia</a>'
                },
                xAxis: {
                    type: 'category',
                    labels: {
                        rotation: -80,
                        style: {
                            fontSize: '11px',
                            fontFamily: 'Verdana, sans-serif'
                        }
                    }
                },
                yAxis: {
                    min: 0,
                    title: {
                        text: 'Количество (ед)'
                    }
                },
                legend: {
                    enabled: false
                },
                tooltip: {
                    pointFormat: 'Количество кафедр: <b>{point.y}</b>'
                },
                series: [{
                    name: 'Population',
                    data: [
                        {% for d in stat %}
                        ['{{ d["name"] }}', {{ d["amount"] }}],
                        {% endfor %}
                    ],
                    dataLabels: {
                        enabled: true,
                        rotation: -90,
                        color: '#FFFFFF',
                        align: 'right',
                        //format: '{point.y:.1f}', // one decimal
                        format: '{point.y}',
                        y: 10, // 10 pixels down from the top
                        style: {
                            fontSize: '13px',
                            fontFamily: 'Verdana, sans-serif'
                        }
                    }
                }]
            });
        });


    </script>

