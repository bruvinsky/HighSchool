{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Список связей кафедра-специальность</h1>
    {# total items count #}
    <div class="count">
        Всего:
        {{ pagination.getTotalItemCount }}
    </div>
    {##}

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Кафедра</th>
                <th>Специальность</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('departmentspecialty_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idDepartmentDS }}</td>
                <td>{{ entity.idSpecialtyDS }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('departmentspecialty_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {##}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    {##}

        <ul>
        <li>
            <a href="{{ path('departmentspecialty_new') }}">
                Добавить связь кафедра-специальность
            </a>
        </li>
    </ul>
    {% endblock %}
