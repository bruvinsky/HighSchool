{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Список оценок</h1>
    {# total items count #}
    <div class="count">
        Всего:
        {{ pagination.getTotalItemCount }}
    </div>
    {##}
    <table class="records_list">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id', 'm.id') }}</th>
                <th>Оценка</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr {% if loop.index is odd %}class="color-odd-even"{% endif %}>
                <td><a href="{{ path('marks_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.mark }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('marks_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {##}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    {##}

        <ul>
        <li>
            <a href="{{ path('marks_new') }}">
                Добавить новую оценку
            </a>
        </li>
    </ul>
    {% endblock %}

{% extends '::base.html.twig' %}
