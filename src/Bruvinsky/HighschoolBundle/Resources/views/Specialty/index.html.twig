{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Список специальностей</h1>
    {# total items count #}
    <div class="count">
        Всего:
        {{ pagination.getTotalItemCount }}
    </div>
    {##}

    <table class="records_list">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id', 'sp.id') }}</th>
                <th{% if pagination.isSorted('sp.name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Специальность', 'sp.name') }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('specialty_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>

                    <li>
                        <a href="{{ path('specialty_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {##}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    {##}

        <ul>
        <li>
            <a href="{{ path('specialty_new') }}">
                Добавить новую специальность
            </a>
        </li>
    </ul>
    {% endblock %}
