{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Студент</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Male</th>
                <td>{{ entity.male }}</td>
            </tr>
            <tr>
                <th>Old</th>
                <td>{{ entity.old }}</td>
            </tr>
            <tr>
                <th>Группа</th>
                <td>{{ entity.idGroupStudent }}</td>
            </tr>
            <tr>
                <th>Город</th>
                <td>{{ entity.idCityStudent }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('student') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('student_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
    {{ dump() }}
{% endblock %}
