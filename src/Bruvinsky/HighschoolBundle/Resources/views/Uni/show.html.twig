{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ВУЗ</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.idCityUni }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('uni') }}">
            Вернуться к списку
        </a>
    </li>
    <li>
        <a href="{{ path('uni_edit', { 'id': entity.id }) }}">
            Редактировать
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
